html(lang='zh-Hant')

	head

		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
		meta(name='viewport' content='width=device-width, initial-scale=1')

		meta(property='og:title' content='25sprout 1st Hackathon')
